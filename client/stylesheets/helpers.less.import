// various mixins that make it simpler to do common things
.position(@type; @top: auto; @right: auto; @bottom: auto; @left: auto; @width: auto; @height: auto) {
  position: @type;
  top: @top;
  right: @right;
  bottom: @bottom;
  left: @left;
  width: @width;
  height: @height;
}

.fill-with-absolute-position {
  .position(absolute, 0, 0, 0, 0);
}
